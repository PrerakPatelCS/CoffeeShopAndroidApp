<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coffeeshop">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoffeeShop">
        <activity
            android:name="com.example.coffeeshop.StoreOrdersActivity"
            android:label = "@string/store_orders_title"
            android:parentActivityName="com.example.coffeeshop.MainActivity"
            />
        <activity
            android:name="com.example.coffeeshop.CurrentOrderActivity"
            android:label="@string/current_order_title"
            android:parentActivityName="com.example.coffeeshop.MainActivity" />
        <activity
            android:name="com.example.coffeeshop.OrderCoffeeActivity"
            android:label="@string/order_coffee_title"
            android:parentActivityName="com.example.coffeeshop.MainActivity" />
        <activity
            android:name="com.example.coffeeshop.OrderDonutActivity"
            android:label="@string/order_donuts_title"
            android:parentActivityName="com.example.coffeeshop.MainActivity"/>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />

        <activity android:name="com.example.coffeeshop.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>